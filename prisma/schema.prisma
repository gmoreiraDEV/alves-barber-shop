generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Service {
  id          String        @id @default(cuid())
  name        String
  description String
  price       Float
  duration    Int
  isActive    Boolean       @default(true)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  appointments Appointment[]
}

model Barber {
  id           String          @id @default(cuid())
  name         String
  specialties  String[]
  createdAt    DateTime        @default(now())
  appointments Appointment[]
  absences     BarberAbsence[]
}

model Appointment {
  id         String   @id @default(cuid())
  clientName String
  phone      String
  date       DateTime
  serviceId  String
  barberId   String
  isActive   Boolean  @default(true)
  deletedAt  DateTime?
  createdAt  DateTime @default(now())

  service Service @relation(fields: [serviceId], references: [id])
  barber  Barber  @relation(fields: [barberId], references: [id])

  @@index([isActive])
}

model BarberAbsence {
  id        String   @id @default(cuid())
  barberId  String
  startAt   DateTime
  endAt     DateTime
  createdAt DateTime @default(now())

  barber Barber @relation(fields: [barberId], references: [id])

  @@index([barberId, startAt])
}
